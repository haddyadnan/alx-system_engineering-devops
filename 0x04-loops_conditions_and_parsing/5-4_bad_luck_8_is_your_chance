#!/usr/bin/env bash
# A bash script that loops from 1 to 10
# displays badluck and goodluck for 4th and 8th iteration and Best school for others
i=1
while [ $i -le 10 ]; do
	if [ $i -eq 4 ]; then
		echo bad luck
	elif [ $i -eq 8 ]; then
		echo good luck
	else
		echo Best School
	fi
	(( i=i+1 ))
done
